@model List<MEMO_JOB.Models.Recruiters.ManageViewModels.RecruiterAccountManagementViewModel>
@inject UserManager<ApplicationUser> _userManager
@inject MEMO_JOBContext _context

@{
    ViewData["Title"] = "Account Management";
}
<p>
    <a asp-action="SubRegister">Create New</a>
</p>
@if (@ViewData["ReturnUrl"] != null)
{
    <p class="text-danger">Số tài khoản cho phép của công ty này là : @ViewData["ReturnUrl"].ToString() </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FullName)*@
                Họ tên
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AccountType)*@
                Loại tài khoản
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.DateCreated)*@
                Ngày tạo tài khoản
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Position)*@
                Chức vụ
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Subscribe)*@
                Đăng ký nhận mail
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                Điện thoại
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Active)*@
                Active?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @if (item.AccountType == "RecruiterUser")
                    {
                        <p>MainAcount</p>
                    }
                    else
                    {
                        <p>SubAccount</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subscribe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a asp-action="SubRegisterEdit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Email">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Email">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
